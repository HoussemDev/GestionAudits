        <table class="table table-striped">
            <thead>
            <tr>
                <th>Organisation</th>
                <th>Audit Title</th>
                <th>Standard</th>
                <th>Audit Status</th>
                <th>Audit Date</th>
            </tr>
            </thead>
            <tbody>
            {% for organisation in orgs %}
                {% for audit in organisation.audits %}
                    <tr>
                        <td>
                        <a href="{{ path('org.show', {id: organisation.id, slug: organisation.slug}) }}" >{{ organisation.name }} </a>
                        </>
                        <td><a href="{{ path('audit.show', {id: audit.id, slug: audit.slug}) }}">{{ audit.Title }} </a>
                        </td>
                        <td>
                            {{ audit.standard }}
                        </td>
                        <td>
                            {{ audit.Status }}
                        </td>
                        <td>
                            {{ audit.auditdate|date('Y-m-d') }}
                        </td>

                    </tr>
                {% endfor %}
            {% endfor %}
            </tbody>

        </table>


    </div>

{% endblock %}