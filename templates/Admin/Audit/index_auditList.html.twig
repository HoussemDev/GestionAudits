{% extends 'base.html.twig' %}
{% block title 'Audit' %}
{% block body %}

    <div class="container mt-4">
        {#<h1>Audit List</h1>#}
        {#{% for message in app.flashes('success') %}#}
        {#<div class="alert alert-success">#}
        {#{{ message }}#}
        {#</div>#}
        {#{% endfor %}#}
        {#<div class="text-right">#}
        {#<a href="{{ path('admin.audit.new') }}" class="btn btn-primary">Create New Audit</a>#}

