{% extends 'base.html.twig' %}
{% block title'Manage Certifications Body' %}
{% block body %}

    <div class="container mt-4">
        <h1>Gerer les options</h1>
        {#{% for message in app.flashes('success') %}#}
            {#<div class="alert alert-success">#}
                {#{{ message }}#}
            {#</div>#}
        {#{% endfor %}#}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for cb in cbs %}
                <tr>
                    <td>{{ cb.name }}</td>
                    <td>
                        <a href="{{ path('admin.cb.edit', {id: cb.id}) }}" class="btn btn-success">Edited</a>
                        <form method="post" action="#" style="display: inline-block"
                              onsubmit="return confirm('Wanna really delete')" >
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cb.id) }}">
                            <button class="btn btn btn-danger">DELETE</button>


                        </form>
                    </td>

                </tr>
            {% endfor %}
            </tbody>

        </table>

        <div class="text-right">
            {#<a href="{{ path('admin.option2.new') }}" class="btn btn-primary">Cree un nouveau bien</a>#}
        </div>

    </div>

{% endblock %}