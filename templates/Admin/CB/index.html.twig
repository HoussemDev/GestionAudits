{% extends 'base.html.twig' %}
{% block title'Manage Certifications Body' %}
{% block body %}

    <div class="container mt-4">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="small">
            Number of Certification Body :  {{ cbs  .getTotalItemCount }}
        </div>
        <div class="text-right">
            <a href="{{ path('admin.cb.new') }}" class="btn btn-primary">Create New Certification Body</a><br><br>

        </div>
        <div class="container-fluid col-sm-8">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for cb in cbs %}
                <tr>
                    <td> <a href="{{ path('cb.show', {id: cb.id, slug: cb.slug}) }}" >{{ cb.name }} </a></td>
                    {#<td> <a class="nav-link" href="{{ path('cb.organisations', {name: cb.name }) }}">organisations</a></td>#}
                    <td>
                        <a href="{{ path('admin.cb.edit', {id: cb.id}) }}" class="btn btn-success">Edit</a>
                        <form method="post" action="{{ path('admin.cb.delete', {id: cb.id }) }}" style="display: inline-block"
                              onsubmit="return confirm('Wanna really delete')" >
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cb.id) }}">
                            <button class="btn btn btn-danger">DELETE</button>


                        </form>
                    </td>

                </tr>


            </tbody>
            {% endfor %}

        </table>
        <div class="container">
            <div class="navigation cen">
                {{ knp_pagination_render(cbs) }}
            </div>
        </div>



    </div>
    </div>
{% endblock %}