{{ form_start(form) }}

<form>
    <div class="form-row">
        <div class="col-md-8 mb-8">
            <div class="row">


                <div class="col-md-12">{{ form_row(form.name) }}</div>
                <div class="col-md-12">{{ form_row(form.username) }}</div>
                <div class="col-md-12">{{ form_row(form.email) }}</div>
                <div class="col-md-12">{{ form_row(form.roles) }}</div>
            </div>
        </div>
    </div>


    {{ form_widget(form) }}

    <button class="btn btn-primary"> {{ button|default('Save') }} </button>


    {{ form_end(form) }}

</form>
