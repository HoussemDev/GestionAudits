{{ form_start(form) }}

<form>
    <div class="form-row">
        <div class="col-md-8 mb-8">
            <div class="row">


                <div class="col-md-12">{{ form_row(form.title) }}</div>
                <div class="col-md-12">{{ form_row(form.standard) }}</div>
                <div class="col-md-12">{{ form_row(form.interpretation) }}</div>
                <div class="col-md-12">{{ form_row(form.clause) }}</div>
                <div class="col-md-12">{{ form_row(form.description) }}</div>
                <div class="col-md-12">{{ form_row(form.causeanalysis) }}</div>
                <div class="col-md-12">{{ form_row(form.plannedcorrectiveaction) }}</div>
                <div class="col-md-12">{{ form_row(form.timescheduleforaction) }}</div>
                <div class="col-md-12">{{ form_row(form.status) }}</div>


            </div>
        </div>
    </div>


    {{ form_widget(form) }}

    <button class="btn btn-primary"> {{ button|default('Save') }} </button>


    {{ form_end(form) }}

</form>
